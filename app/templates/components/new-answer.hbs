{{#if addNewAnswer}}
  <h1>New Answer</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="content">Your Answer:</label>
        {{input value=content id="content"}}
      </div>

      <div class="form-group">
        <label for="author">Author:</label>
        {{input value=author id="author"}}
      </div>

      <button class="btn btn-success" {{action 'save1'}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-success"{{action 'answerFormShow'}}>Answer Question</button>
{{/if}}
