{{#if updateQuestionForm}}
  <h4>Edit the question "{{question.content}}"</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="content">Title:</label>
        {{input value=content id="content" placeholder=question.content}}
      </div>

      <div class="form-group">
        <label for="notes">Question:</label>
        {{input value=notes id="notes" placeholder=question.notes}}
      </div>

      <div class="form-group">
        <label for="author">Username:</label>
        {{input value=author id="author" placeholder=question.author}}
      </div>

      <button {{action 'updateQuestion' question}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateQuestionForm'}}>Edit Question</button>
{{/if}}
